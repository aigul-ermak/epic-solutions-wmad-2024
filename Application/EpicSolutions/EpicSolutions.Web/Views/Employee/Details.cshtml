@model EpicSolutions.Model.EmployeePersonalDTO

@{
    ViewData["Title"] = "Details";
}



<h4 class="text-center mt-5">Personal Area</h4>

<div class="row justify-content-center">
    <div class="col-12 col-md-8">
        <div>
            <a asp-controller="Employee" asp-action="Dashboard" class="btn btn-outline-primary m-1 cardBoxShadow">Bask to Dashboard</a>
        </div>
        <dl class="row justify-content-center mt-5 mb-5">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.EmployeeNumber)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.EmployeeNumber)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.MiddleInitial)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.MiddleInitial)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.StreetAddress)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.StreetAddress)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.PostalCode)
            </dt>
            <dd class="col-sm-6" style="text-transform: uppercase;">
                @Html.DisplayFor(model => model.PostalCode)
            </dd>
        </dl>
        <div>
            <a asp-controller="Employee" asp-action="Personal" asp-route-employeeId="@Model.Id" class="btn btn-outline-primary m-1 cardBoxShadow">Update Address</a> |
            <a asp-controller="Employee" asp-action="PersonalPassword" asp-route-employeeId="@Model.Id" class="btn btn-outline-primary m-1 cardBoxShadow">Update Password</a>
        </div>

    </div>    
</div>



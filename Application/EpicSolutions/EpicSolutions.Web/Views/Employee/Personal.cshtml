@model EpicSolutions.Model.EmployeePersonalDTO

@{
    ViewData["Title"] = "Personal";
    //bool hasMiddleInitial = !string.IsNullOrEmpty(Model.MiddleInitial);
}

<h4 class="text-center mt-2">Personal Area</h4>
<div class="row justify-content-center">

    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        <div>
            <a asp-controller="Employee" asp-action="Dashboard" class="btn btn-outline-primary m-1 cardBoxShadow">Bask to Dashboard</a>
        </div>

        <form asp-action="Personal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RecordVersion" />


            <div class="form-group">
                <label asp-for="EmployeeNumber" class="control-label"></label>
                <input asp-for="EmployeeNumber" class="form-control" readonly />
                @* <span asp-validation-for="EmployeeNumber" class="text-danger"></span> *@
            </div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" readonly />
                @* <span asp-validation-for="FirstName" class="text-danger"></span> *@
            </div>
          @*   @if (hasMiddleInitial)
            { *@
                <div class="form-group">
                    <label asp-for="MiddleInitial" class="control-label"></label>
                    <input asp-for="MiddleInitial" class="form-control" readonly />
                    <span asp-validation-for="MiddleInitial" class="text-danger"></span>
                </div>
         @*    } *@
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" readonly />
                @*  <span asp-validation-for="LastName" class="text-danger"></span> *@
            </div>

            <div class="form-group">
                <label asp-for="StreetAddress" class="control-label"></label>
                <input asp-for="StreetAddress" class="form-control" />
                <span asp-validation-for="StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label"></label>
                <input asp-for="PostalCode" class="form-control" style="text-transform: uppercase;" />
                <span asp-validation-for="PostalCode" class="text-danger" ></span>
            </div>

            <div class="row justify-content-center mt-3">
                <div class="col-8 text-center mb-2">
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary w-50" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

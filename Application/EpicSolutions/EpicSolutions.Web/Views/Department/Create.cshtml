    <a asp-action="Index">Back to List</a>
</div> *@


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {

            function hideSuccessMessage() {
                $('#messageRow').fadeOut('slow');
                }
            }); 
        });
    </script>    
}

@model EpicSolutions.Model.Department

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">       

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvocationDate" class="control-label"></label>              
                <input asp-for="InvocationDate" type="date" class="form-control" />
                @*  <span asp-validation-for="InvocationDate" class="text-danger"></span> *@
            </div>
            <div class="form-group text-center mt-5">
                <input type="submit" value="Create" class="btn btn-primary w-50" />
            </div>
        </form>
    </div>
</div>

